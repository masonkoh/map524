<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffbb16"
            android:textAlignment="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Toronto"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="#ff423d">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_name_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:maxLength="8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEPT"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_dept_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DEPT"
                    android:maxLength="8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YEAR"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_year_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="YEAR"
                    android:maxLength="8" />

                <Button
                    android:id="@+id/btn_add_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="add" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="#ab62ce">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_name_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"

                    android:maxLength="8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEPT"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_dept_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DEPT"
                    android:maxLength="8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YEAR"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_year_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="YEAR"
                    android:maxLength="8" />

                <Button
                    android:id="@+id/btn_add_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="add" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffbb16">

            <Button
                android:id="@+id/btn_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View" />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>